<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  <!-- Premium Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
  
  {{ content_for_header }}
  
  <style>
    :root {
      --primary-color: #1a1a1a;
      --accent-color: #c5a47e;
      --light-bg: #f8f8f8;
    }
    
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Roboto', sans-serif;
      color: var(--primary-color);
    }

    .luxury-header {
      padding: 1rem 5%;
      background: rgba(255,255,255,0.95);
      border-bottom: 1px solid #eee;
    }

    .hero-section {
      height: 100vh;
      background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('hero-bg.jpg');
      background-size: cover;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      text-align: center;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      padding: 4rem 5%;
    }

    .product-card {
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-5px);
    }

    .gold-accent {
      color: var(--accent-color);
      border-bottom: 2px solid var(--accent-color);
      display: inline-block;
      padding-bottom: 0.5rem;
    }

    .btn-luxury {
      background: var(--accent-color);
      color: white;
      padding: 12px 30px;
      border: none;
      cursor: pointer;
      transition: opacity 0.3s ease;
    }

    .btn-luxury:hover {
      opacity: 0.9;
    }
  </style>
</head>

<body>
  {% section 'luxury-header' %}

  <main>
    {% if template.name == 'index' %}
      <div class="hero-section">
        <div class="hero-content">
          <h1 class="font-playfair" style="font-size: 3.5rem; margin-bottom: 1rem;">Timeless Elegance</h1>
          <p class="mb-4" style="font-size: 1.2rem;">Discover Our Exclusive Collection</p>
          <button class="btn-luxury">Explore Now</button>
        </div>
      </div>

      <div class="product-grid">
        {% for product in collections.all.products limit: 4 %}
          <div class="product-card">
            <img src="{{ product.featured_image | img_url: '500x' }}" alt="{{ product.title }}" style="width:100%;">
            <div class="product-info p-3">
              <h3 class="gold-accent">{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </main>

  {% section 'luxury-footer' %}

  <script>
    // Mobile Menu Toggle
    document.querySelector('.menu-toggle').addEventListener('click', () => {
      document.querySelector('.nav-links').classList.toggle('active');
    });

    // Smooth Scroll
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
          behavior: 'smooth'
        });
      });
    });
  </script>
</body>
</html>
